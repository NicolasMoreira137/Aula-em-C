#include <stdio.h>
#include <locale.h>

int main()
{
    float t,av,ex,med;

    printf("ESTE PROGRAMA IRA INFORMAR SE VOCÊ FOI APROVADO OU NÃO!!\n");
    printf("Insira a nota do seu trabalho: ");
    scanf("%f",&t);
    printf("insira a nota da sua avaliação: ");
    scanf("%f",&av);
    printf("insira a nota do seu exame: ");
    scanf("%f",&ex);
    
    med=(t*2+av*3+ex*5)/10;
    
    if(med>=8,0 && med<=10,0){
        printf("Você foi aprovado! sua media foi %1.f",med);
    }
    else if(med>=7,0 && med<=7,9){
        printf("Você foi aprovado! sua media foi %1.f",med);
    }
    else if(med>=6,0 && med<=6,9){
        printf("Você foi reprovado! sua media foi %1.f",med);
    }
    else if(med>=5,0 && med<=5,9){
        printf("Você foi reprovado! sua media foi %1.f",med);
    }
    else if(med>=0,0 && med<=4,9){
        printf("Você foi reprovado! sua media foi %1.f",med);
    }
    
   
   
    return 0;
}
